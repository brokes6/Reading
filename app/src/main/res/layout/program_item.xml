<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@drawable/fillet_background"
    android:layout_marginTop="10dp"
    android:layout_height="100dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
            <TextView
                android:id="@+id/program_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="1"
                android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/whole"
        android:layout_marginLeft="5dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
            <TextView
                android:id="@+id/program_text"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="节目描述，描述，描述，描述，描述，描述，描述，描述，描述，描述"
                android:maxLines="2"
                android:textSize="18sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:paddingRight="10dp"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
            <TextView
                android:id="@+id/program_Publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4天前"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:orientation="vertical">
                    <ImageView
                        android:id="@+id/program_download"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/mdownload"
                        android:layout_marginBottom="15dp"/>
            </LinearLayout>

    </LinearLayout>
</LinearLayout>