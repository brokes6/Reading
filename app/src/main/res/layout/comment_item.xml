<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fillet_background">
        <RelativeLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <com.example.reading.util.RoundImageView
                    android:id="@+id/com_userimg"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/bt"
                    app:type="circle"/>
                <TextView
                    android:id="@+id/com_username"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mignz"
                    android:layout_toRightOf="@id/com_userimg"
                    android:textColor="#303030"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/com_time"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10分期发布"
                    android:layout_below="@id/com_username"
                    android:layout_toRightOf="@id/com_userimg"
                    android:textColor="#646464"
                    android:textSize="13sp"/>
        </RelativeLayout>
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/com_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="测试文字，测试文字，测试文字，测试文字，测试文字，测试文字,测试文字"
                    android:maxLines="4"
                    android:textColor="#303030"/>
                //放置图片
                <com.example.reading.view.StandardNineGridLayout
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/layout_nine_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:sapcing="4dp"
                    android:transitionName="image"/>

                //
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/loveNum"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@mipmap/thumbs_up_black"/>
                                <TextView
                                    android:id="@+id/loveNumStr"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:text="0"
                                    android:textColor="#000000"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"/>
                                <ImageView
                                    android:id="@+id/collection"
                                    android:layout_marginLeft="15dp"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@mipmap/shocang"/>

                                <TextView
                                    android:id="@+id/collectionStr"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:text="0"
                                    android:textColor="#000000"
                                    android:textSize="16sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@mipmap/comment_black" />
                                <TextView
                                    android:id="@+id/talkNumStr"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:text="0"
                                    android:textColor="#000000"
                                    android:textSize="16sp" />
                        </LinearLayout>
                </LinearLayout>
        </LinearLayout>
</LinearLayout>