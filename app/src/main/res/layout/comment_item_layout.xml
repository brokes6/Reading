<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <com.example.reading.Picture.MyImageView
            android:id="@+id/comment_item_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/user_logo"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="6dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/comment_item_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#494949"
                android:text="沐风" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/comment_item_floor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="3dp"
                    android:textColor="#989898"/>
                <TextView
                    android:layout_marginLeft="7dp"
                    android:id="@+id/comment_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1小时前"
                    android:textSize="14sp"
                    android:layout_marginTop="3dp"
                    android:textColor="#989898"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/comment_item_like"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:src="@drawable/icon_comment_like"
                android:theme="?android:selectableItemBackgroundBorderless" />
            <TextView
                android:id="@+id/loveNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginRight="10dp"
                android:text="0" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/comment_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="#484848"
        android:textSize="15sp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="24dp"
        android:text="测试文字"/>

    <TextView
        android:layout_marginTop="9dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DFDFDF"/>
</LinearLayout>